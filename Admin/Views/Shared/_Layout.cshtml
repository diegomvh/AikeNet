<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>    
    <link href="@Url.Content("~/Content/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/bootstrap-responsive.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/styles.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                @Html.Partial("_navbar")
                @if (IsSectionDefined("QuickSearch"))
                {
                    @RenderSection("QuickSearch")
                }
            </div>
        </div>
    </div>
    
	<div class="container">
		@RenderBody()
	</div>
	
    <script src="@Url.Content("~/Content/js/jquery-1.8.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/js/bootstrap.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/js/cedulas.js")" type="text/javascript"></script>
    <script type="text/javascript">
        var links = $(".nav > li");
        var pathname = window.location.pathname;
        var menuLi = null;
        var menuLen
        links.each(function (index, item) {
            var href = $(item).find("a").attr("href");
            if (pathname.indexOf(href) == 0) {
                if (menuLi == null || menuLen < href.length) {
                    menuLi = item;
                    menuLen = href.length;
                }
            }
        });
        $(menuLi).addClass("active");
    </script>
    @if (IsSectionDefined("Scripts")) {
    	<script type="text/javascript">
    		@RenderSection("Scripts")
    	</script>
    }
</body>
</html>